@model MyNextComic.Web.Models.Home.HomeModel
<div class="col-md-12">
    <div class="row">
        <button class="btn btn-primary" onclick="getRecommendation()">Recommend Me</button>
    </div>
</div>
<br />
<div class="col-md-12">
    <h3 class="comic-title-big">Top Rated Comics</h3>
    <div class="row text-center text-lg-left">
        @foreach (var comic in Model.TopComics)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 comic-wrapper" id="@comic.Id">
                <span class="comic-title">@comic.Name</span>
                <a href="@Url.Action("Issue","Comics", new { id = comic.Id })" class="d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src="@comic.Image.Original_Url.Replace('"', ' ')" alt="@comic.Name">
                </a>
            </div>
        }
    </div>
</div>