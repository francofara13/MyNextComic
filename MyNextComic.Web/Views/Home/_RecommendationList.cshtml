@model MyNextComic.Web.Models.Home.HomeModel
<h3 class="comic-title-big">Here are some Recommendations!</h3>
<div class="row text-center text-lg-left">
    <div class="col-lg-1"></div>
    @foreach (var comic in Model.RecommendedComics)
    {
        <div class="col-lg-2 col-md-4 col-xs-6 comic-wrapper" id="@comic.Id">
            <span class="comic-title">@comic.Name</span>
            <a href="@Url.Action("Issue","Comics", new { id = comic.Id })" class="d-block mb-4 h-100">
                <img class="img-fluid img-thumbnail-recommended" src="@comic.Image.Original_Url.Replace('"', ' ')" alt="@comic.Name">
            </a>
        </div>
    }
    <br />
</div>